{% extends 'base.html.twig' %}

{% block title %}Commande Index{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Commande</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="mt-4 mb-2">
                    <a href="{{ path('app_commande_new') }}" class="btn btn-primary">
                        Ajouter une commande
                    </a>
                </div>
                <table class="table table-striped table-bordered text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Client</th>
                            <th scope="col">Prix</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for commande in commandes %}
                            <tr>
                                <td>{{ commande.id }}</td>
                                <td>{{ commande.client }}</td>
                                <td>{{ commande.prix }} €</td>
                                <td>
                                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-sm btn-primary">Details</a>
                                    {{ include('commande/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucune commande trouvée</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                
            </div>
        </div>
    </div>
{% endblock %}
