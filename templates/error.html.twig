{% extends 'base.html.twig' %}

{% block title %}Errors!{% endblock %}

{% block body %}
    <section class="py-3 py-md-5 min-vh-100 d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="text-center">
                        <h2 class="d-flex justify-content-center align-items-center gap-2 mb-4">
                            {{status}}
                        </h2>
                        <h3 class="h2 mb-2">Oops! vous avez rencontré une erreur</h3>
                        <p class="mb-5"> {{message}}</p>
                        <a class="btn bsb-btn-5xl btn-dark rounded-pill px-5 fs-6 m-0" href="/" role="button">Retour à l'accueil</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}