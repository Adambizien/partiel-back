{% extends 'base.html.twig' %}

{% block title %}Nouveau Materiel{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row mb-4">
            <div class="col-12">
                <a href="{{ path('app_materiel_index') }}" class="btn btn-secondary">
                    &larr; Retour Ã  la liste
                </a>
            </div>
        </div>

        <h1 class="text-center mb-4">Nouveau Materiel</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form, {'attr': {'class': 'form'}}) }}
                
                <div class="form-group">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.quantite, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.quantite) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.prix, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prix) }}
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

