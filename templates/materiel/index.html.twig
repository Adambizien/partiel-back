{% extends 'base.html.twig' %}

{% block title %}Materiel index{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Materiel</h1>
        
        <div class="row justify-content-center">
        
            <div class="col-md-8">
                <div class="mt-4 mb-2">
                    <a href="{{ path('app_materiel_new') }}" class="btn btn-primary">
                        Ajouter un materiel
                    </a>
                </div>
                <table class="table table-striped table-bordered text-center">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Quantite</th>
                            <th scope="col">Prix</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for materiel in materiels %}
                        <tr>
                            <td>{{ materiel.id }}</td>
                            <td>{{ materiel.nom }}</td>
                            <td>{{ materiel.quantite }}</td>
                            <td>{{ materiel.prix }} €</td>
                            <td>
                                <a href="{{ path('app_materiel_show', {'id': materiel.id}) }}" class="btn btn-sm btn-primary">Détails</a>
                                <a href="{{ path('app_materiel_edit', {'id': materiel.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                {{ include('materiel/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun materiel trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                
            </div>
        </div>
    </div>
{% endblock %}
